{
  "name": "liltag",
  "version": "1.0.0",
  "description": "LilTag is a simple and flexible JavaScript tag management system designed for developers, allowing dynamic loading of scripts based on specific triggers.",
  "main": "dist/liltag.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && terser dist/liltag.js -o dist/liltag.min.js",
    "minify": "terser dist/liltag.js -o dist/liltag.min.js",
    "start": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deeravenger/liltag.git"
  },
  "keywords": [
    "tag",
    "management",
    "javascript",
    "dynamic",
    "loader",
    "developer"
  ],
  "author": "Dmitry Kuznetsov",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.1.1",
    "terser": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "util": "^0.12.5"
  },
  "files": [
    "dist"
  ]
}
